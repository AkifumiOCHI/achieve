<div class="container">
  <div class="wrapper col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1">
<p id="notice"><%= notice %></p>

<h1>タスク一覧</h1>
<%= link_to '新しいタスクの作成', new_task_path, class: 'btn btn-default' %>
<hr>

<div class="row">
  <div class="col-md-6 col-sm-12">
<h3>自分が担当するタスク</h3>
<% @tasks.where(charge_id: current_user.id).each do |task| %> <!--viewでもwhere句で条件指定できる-->
<table class="index">
    <tr>
      <td><strong>○　標題</strong></td>
      <td><h4><strong><%= link_to task_path(task) do %><%= task.title %><% end %></strong></h4></td>
    </tr>
    <tr>
      <td>○　依頼者</td>
      <td><%= task.user.name %></td>
    </tr>
    <tr>
      <td>○　内容</td>
      <td><%= task.content %></td>
    </tr>
    <tr>
      <td>○　期限</td>
      <td><%= task.deadline.strftime("%Y年%m月%d日 %H時%M分") %></td>
    </tr>
    <tr>
      <td><strong>○　担当者</strong></td>
      <td><strong><%= task.charge.name %></strong></td>
    </tr>
    <tr>
      <td>○　進捗状況</td>
      <td><%= task.status %></td>
    </tr>
 </table>

<div style="text-align: center;">
<%= link_to 'タスクの編集', edit_task_path(task), class: 'btn btn-info' %>　　
<%= link_to 'タスクの削除', task_path(task), method: :delete, data: { confirm: '本当に削除してもよろしいですか？' } , class: 'btn btn-danger' %>
</div>
<br>
<br>

<% end %>

</div>

<div class="col-md-6 col-sm-12">
<h3>自分が作成したタスク</h3>
<% @tasks.where(user_id: current_user.id).each do |task| %>
<table class="index">
    <tr>
      <td><strong>○　標題</strong></td>
      <td><h4><strong><%= link_to task_path(task) do %><%= task.title %><% end %></strong></h4></td>
    </tr>
    <tr>
      <td><strong>○　依頼者</strong></td>
      <td><strong><%= task.user.name %></strong></td>
    </tr>
    <tr>
      <td>○　内容</td>
      <td><%= task.content %></td>
    </tr>
    <tr>
      <td>○　期限</td>
      <td><%= task.deadline.strftime("%Y年%m月%d日 %H時%M分") %></td>
    </tr>
    <tr>
      <td>○　担当者</td>
      <td><%= task.charge.name %></td>
    </tr>
    <tr>
      <td>○　進捗状況</td>
      <td><%= task.status %></td>
    </tr>
 </table>

<div style="text-align: center;">
<%= link_to 'タスクの編集', edit_task_path(task), class: 'btn btn-info' %>　　
<%= link_to 'タスクの削除', task_path(task), method: :delete, data: { confirm: '本当に削除してもよろしいですか？' } , class: 'btn btn-danger' %>
</div>
<br>
<br>

<% end %>


</div>

</div>
</div>
