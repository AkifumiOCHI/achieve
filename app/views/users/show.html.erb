<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <div class="user_show">
      <table class="user_detail">
        <tr>
          <td><strong>ユーザID</strong></td>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <td><strong>氏名</strong></td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td><strong>メールアドレス</strong></td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td><strong>イメージ</strong></td>
          <td><%= profile_img(@user) %></td>
        </tr>
        <tr>
          <td><strong>ユーザ作成時</strong></td>
          <td><%= @user.created_at %></td>
        </tr>
        <tr>
          <td><strong>最終ログイン</strong></td>
          <td><%= @user.last_sign_in_at %></td>
        </tr>
      </table>
    </div>
    <p>フォロワー一覧</p>
      <div id="followers_area">
        <%= render partial: 'followers' %>
      </div>
    <p>フォロイー一覧</p>
      <div id="followed_area">
        <%= render partial: 'followed_users' %>
      </div>
  </div>
</div>
