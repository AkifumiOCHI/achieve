<div class="container">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

<p id="notice"><%= notice %></p>

<%= form_for(@contact, url: confirm_contacts_path) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation"> </--エラーメッセージの件数を表示 -->
        <h2><%= @contact.errors.count %>件のエラーがあります。</h2>
        <ul>
                     </-- @Contact.errorsは@Contactをバリデーションした際のエラー情報です。
                     # full_messagesは複数のエラーメッセージを表します。-->
            <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= f.label :お名前 %>
<%= f.text_field :name, class: 'form-control' %>
<br>
<br>
<br>
<%= f.label :メールアドレス %>
<%= f.text_field :email, class: 'form-control' %>
<br>
<br>
<br>
<%= f.label :内容 %>
<%= f.text_field :content, class: 'form-control' %>
<br>
<br>
<br>
<%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>
<br>
<br>
<br>

  </div>

</div>
